<?xml version="1.0" encoding="UTF-8" ?> 
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" > 
<mapper namespace="com.pall.portal.repository.mapper.role.RoleManageDao"> 
	<select id="queryRoleList" resultType="com.pall.portal.repository.entity.role.RoleEntity"
	parameterType="com.pall.portal.repository.entity.role.RoleQueryFormEntity"> 
 		select roleid,roleName,DESCRIPTION rDetail from t_ums_role where 1=1
 		 <if test="roleName != null and roleName != ''">  
	       AND roleName like '%#{roleName}%'
	    </if>
	     order by roleid desc limit #{startPageNum},#{pageSize}
 	</select> 
	<select id="queryRoleTotalRecords" resultType="int"
	parameterType="com.pall.portal.repository.entity.role.RoleQueryFormEntity"> 
 		select count(1) from t_ums_role where 1=1
 		<if test="roleName != null and roleName != ''">  
	       AND roleName like '%#{roleName}%'
	    </if>
 	</select>
 	<update id="modRole" parameterType="com.pall.portal.repository.entity.role.RoleEntity">
         update t_ums_role f set ROLENAME=#{roleName},DESCRIPTION=#{rDetail} where f.roleid = #{roleid}
    </update>
    <insert id="addRole" parameterType="com.pall.portal.repository.entity.role.RoleEntity">
    	<selectKey keyProperty="roleid" order="AFTER" resultType="java.lang.Integer">
            select LAST_INSERT_ID()
        </selectKey>
         insert into t_ums_role(ROLENAME,DESCRIPTION)values(#{roleName},#{rDetail})
    </insert>
    <delete id="delRole"  parameterType="java.util.List">  
        DELETE FROM t_ums_role WHERE roleid in 
        <foreach collection="roleids" item="item" index="index" open="(" close=")" separator=",">  
        	#{item}  
    	</foreach> 
	</delete>
</mapper> 
